<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- font for headers font-family: 'Fjalla One', sans-serif; -->
    <link href="https://fonts.googleapis.com/css?family=Fjalla+One|Mukta+Vaani" rel="stylesheet">    <!-- font for text  font-family: 'Mukta Vaani', sans-serif;-->
    <link href="https://fonts.googleapis.com/css?family=Mukta+Vaani" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/signup.css" media="screen" title="no title" charset="utf-8">
    <title>Sign Up</title>
  </head>
  <body>
    <div class="superCont">
      <div class="imgcont">
        <img src="stylesheets/images/pic5.jpeg" height="100%" width="100%"/>
      </div>
    <div class="align-center">
      <a href="/" style="margin-bottom: 5vh;"><h2>BounceAround</h2></a><br />
    </div>
    <div class="container-fluid">
      <form class="" action="/signup" method="post">
        <input class="form-group" type="text" name="email" value="" placeholder="email">
        <input class="form-group" type="text" name="name" value="" placeholder="name">
        <input class="form-group" type="password" name="password" value="" placeholder="password">
        <input class="form-group" type="submit" id="makeMeYellow">
      </form><br>
    </div>
  <div class="button-container">
    <button id="google-signin" type="button" name="google" onclick="location.href = '/auth/google';"></button>
  </div>
  <div style="width: 100vw; text-align: center;">
    <p style="color: red; font-size: 2em; background-color: white; width: 35vw; margin-left: auto; margin-right: auto;">
      <%= alert %>
    </p>
  </div>
</div>
  </body>
</html>
